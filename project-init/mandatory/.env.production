NODE_ENV=production

# Railway provides PORT automatically
# PORT is set by Railway

# Database (set in Railway UI with production credentials)
# Example: DATABASE_URL=${{Railway.POSTGRES_URL}}
DATABASE_URL=

# API Configuration
API_URL=https://[project-name].up.railway.app

# Third-party APIs (set PRODUCTION keys in Railway UI)
# CRITICAL: Use production-grade keys, not development keys!
OPENAI_API_KEY=
STRIPE_SECRET_KEY=
SENDGRID_API_KEY=

# Feature Flags
ENABLE_DEBUG_LOGGING=false
ENABLE_EXPERIMENTAL_FEATURES=false

# CORS
CORS_ORIGIN=https://[project-name].up.railway.app

# Session (generate strong random secret)
SESSION_SECRET=  # Use 32+ character random string in Railway UI

# Security
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

